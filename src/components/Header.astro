---
const {} = Astro.props;
---

<header class="bg-white/95 backdrop-blur-md fixed top-0 left-0 w-full z-50 shadow-lg border-b border-secondary/30">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-gradient-to-br from-primary to-primary/70 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <a href="/" class="text-2xl font-bold bg-gradient-to-r from-primary to-success bg-clip-text text-transparent">
        Ciber Click
      </a>
    </div>
    
    <div class="hidden md:flex items-center space-x-8">
      <a href="#hero" class="text-text hover:text-primary transition-colors font-medium">Inicio</a>
      <a href="#about" class="text-text hover:text-primary transition-colors font-medium">Nosotros</a>
      <a href="#services" class="text-text hover:text-primary transition-colors font-medium">Servicios</a>
      <a href="#testimonials" class="text-text hover:text-primary transition-colors font-medium">Testimonios</a>
      <a href="#contact" class="bg-primary text-white px-6 py-2 rounded-full hover:bg-primary/90 transition-all font-semibold shadow-lg hover:shadow-xl transform hover:scale-105">
        Contacto
      </a>
    </div>
    
    <div class="md:hidden">
      <button id="menu-btn" class="text-dark focus:outline-none p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </nav>
  
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-secondary/30">
    <a href="#hero" class="block py-3 px-6 text-text hover:bg-secondary/30 hover:text-primary transition-colors font-medium">Inicio</a>
    <a href="#about" class="block py-3 px-6 text-text hover:bg-secondary/30 hover:text-primary transition-colors font-medium">Nosotros</a>
    <a href="#services" class="block py-3 px-6 text-text hover:bg-secondary/30 hover:text-primary transition-colors font-medium">Servicios</a>
    <a href="#testimonials" class="block py-3 px-6 text-text hover:bg-secondary/30 hover:text-primary transition-colors font-medium">Testimonios</a>
    <a href="#contact" class="block py-3 px-6 text-text hover:bg-secondary/30 hover:text-primary transition-colors font-medium">Contacto</a>
  </div>
</header>

<script>
  const menuBtn = document.getElementById("menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });

    const menuLinks = mobileMenu.querySelectorAll("a");
    menuLinks.forEach(link => {
      link.addEventListener("click", () => {
        mobileMenu.classList.add("hidden");
      });
    });
  }
</script>
